<assembly>
    <id>data-package</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/data/resources</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>db/*.script</exclude>
                <exclude>db/sql/schema/**</exclude>
                <exclude>karaf/etc/branding-ssh.properties</exclude>
                <exclude>karaf/etc/config.properties</exclude>
                <exclude>karaf/etc/org.apache.karaf.features.cfg</exclude>
                <exclude>karaf/etc/startup.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/data/resources</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>db/*.script</include>
                <include>karaf/etc/branding-ssh.properties</include>
                <include>karaf/etc/org.apache.karaf.features.cfg</include>
                <include>karaf/etc/startup.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/karaf</directory>
            <outputDirectory>/karaf</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/karaf/etc</directory>
            <outputDirectory>karaf/etc</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/generated-resources</directory>
            <outputDirectory>karaf/etc</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/ddl</directory>
            <outputDirectory>db/sql/schema</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
</assembly>