                </bean>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="no-options"/>
                    <property name="value" value="true"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="Toolbar.Item.OpenInContentManager.NewTab" parent="Toolbar.Item.OpenInContentManager" scope="prototype">
        <property name="properties">
            <list>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="url"/>
                    <property name="value"
                              value="$context/engines/manager.jsp?conf=repositoryexplorer-anthracite&amp;site=$siteuuid&amp;selectedPaths=$nodepath&amp;lang=$lang"/>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="target"/>
                    <property name="value" value="_blank"/>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="no-options"/>
                    <property name="value" value="true"/>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Portlet Manager -->
    <bean id="Toolbar.Item.PortletManager.NewTab" parent="Toolbar.Item.PortletManager" scope="prototype">
        <property name="properties">
            <list>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="url"/>
                    <property name="value"
                              value="$context/engines/manager.jsp?conf=portletmanager-anthracite&amp;site=$siteuuid&amp;lang=$lang"/>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="target"/>
                    <property name="value" value="_blank"/>
                </bean>
