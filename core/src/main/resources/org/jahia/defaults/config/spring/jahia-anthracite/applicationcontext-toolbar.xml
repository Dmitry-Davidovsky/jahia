                </bean>
            </list>
        </property>
    </bean>

    <!-- Site Manager -->
    <bean id="Toolbar.Item.SiteManager.NewTab" parent="Toolbar.Item.SiteManager" scope="prototype">
        <property name="properties">
            <list>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="url"/>
                    <property name="value"
                              value="$context/engines/manager.jsp?conf=sitemanager-anthracite&amp;site=$siteuuid&amp;lang=$lang"/>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.toolbar.Property">
                    <property name="name" value="target"/>
